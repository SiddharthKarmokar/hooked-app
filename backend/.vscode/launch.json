{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "FastAPI: Uvicorn",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "main:app",          // Adjust this if your app is not in main.py or app is not the FastAPI instance
        "--reload"
      ],
      "jinja": true,
      "env": {
        "ENVIRONMENT": "development"
      },
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal"
    }
  ]
}